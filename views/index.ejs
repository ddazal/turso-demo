<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Demo</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
</head>

<body>
  <section class="section">
    <div class="container">
      <div class="columns">
        <div class="column is-half">
          <h1 class="subtitle">
            Create a new database
          </h1>
          <form action="/upload" class="mt-4" enctype="multipart/form-data" method="post">
            <div class="field">
              <label class="label" for="name">DB Name</label>
              <div class="control">
                <input class="input" id="name" name="name" type="text" placeholder="Salaries in data science" required>
              </div>
            </div>
            <div class="field">
              <label class="label" for="file">File</label>
              <div class="file">
                <label class="file-label">
                  <input class="file-input" type="file" name="file" id="file">
                  <span class="file-cta">
                    <span class="file-label">
                      Choose a fileâ€¦
                    </span>
                  </span>
                </label>
              </div>
            </div>
            <input class="button is-primary" type="submit">
          </form>
        </div>
        <div class="column is-half">
          <h1 class="subtitle">
            Your databases
          </h1>
          <div class="content">
            <% if (databases) { %>
              <ul>
                <% databases.forEach(function(db){ %>
                  <li><%= db.name %> - <a href="/database/<%= db.id %>">view</a></li>
                <% }); %>
              </ul>
            <% } else { %>
              <p>You have not created any databases.</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>

</html>